<div class='mx-20 ml-20'>
    <form id="edit-post" class="rounded-md border bg-slate-50 shadow-sm flex flex-col p-5 my-8">
    <h2 class="font-mono text-2xl text-emerald-400 font-bold">Edit Post</h2>
    <div class='mb-2'>
        <label for="post-title" class="font-mono text-sm font-medium text-slate-400">Title:</label>
        <input type="text" name="post-title" value='{{post.title}}' 
        class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
    </div>
    <div class='mb-2'>
        <textarea name="post-body" rows="6" col="100"
        class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>{{post.post_body}}</textarea>
    </div>
    <button id='edit-btn' type='submit' class="w-1/6 font-mono font-normal text-slate-600 bg-emerald-300 rounded py-2 pl-4 hover:bg-emerald-400">Save Changes</button>
</form>
</div>

<script src='/javascript/edit-post.js'></script>