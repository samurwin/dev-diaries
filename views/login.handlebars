<div id='main' class='mx-20 my-20 flex flex-row justify-center w-auto'>
    <form id='signup-form' class=' w-1/3 rounded-md border bg-slate-50 shadow-sm flex flex-col p-5 mb-8 h-fit mr-20'>
        <h3 class="font-mono text-xl font-semibold text-slate-700">SIGN UP</h3>

        <div class='mb-2'>
            <label for='username-signup' class='font-mono text-sm font-medium text-slate-400'>Username:</label>
            <input type='text' name='username-signup' placeholder='Enter a username...' 
            class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
        </div>

        <div class='mb-2'>
            <label for='email-signup' class='font-mono text-sm font-medium text-slate-400'>Email:</label>
            <input type='email' name='email-signup' placeholder='Enter your email...'
            class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
        </div>

        <div class='mb-2'>
            <label for='password-signup' class='font-mono text-sm font-medium text-slate-400'>Password:</label>
            <input type='password' name='password-signup' placeholder='Enter a password...'
            class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
            <p class='font-mono text-xs font-normal text-emerald-300 pt-1'>Password must be 6 characters<span id='check-length' class='inline-block'></span></p>
        </div>

        <button id='signup-btn' type='submit' class="font-mono font-normal text-slate-600 bg-emerald-300 rounded py-2 pl-4 hover:bg-emerald-400">Sign Up</button>
    </form>

    <form id='login-form' class=' w-1/3 rounded-md border bg-slate-50 shadow-sm flex flex-col p-5 h-fit' >
        <h3 class="font-mono text-xl font-semibold text-slate-700">LOGIN</h3>

        <div class='mb-2'>
            <label for='email-login' class='font-mono text-sm font-medium text-slate-400'>Email:</label>
            <input type='email' name='email-login' placeholder='Enter your email...'
            class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 pl-4 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
        </div>

        <div class='mb-2'>
            <label for='password-login' class='font-mono text-sm font-medium text-slate-400'>Password:</label>
            <input type='password' name='password-login' placeholder='Enter your password...'
            class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
        </div>

        <button id='login-btn' type='submit' class="font-mono font-normal text-slate-600 bg-emerald-300 rounded py-2 px-2 hover:bg-emerald-400">Login</button>
    </form>
</div>

<script src='./javascript/login.js'></script>