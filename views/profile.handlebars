<div class="flex flex-col justify-center mx-10 mt-10">
<div class="flex flex-col w-1/3 mt-10 ml-10">
    <h1 class="text-5xl font-mono text-slate-600 font-bold">My Profile</h1>
    <h2 class="mt-4 text-3xl font-mono font-semibold text-emerald-400">Hello <span>{{sessionUser.username}}</span>!</h2>
</div>

<form id="create-post" class="rounded-md border bg-slate-50 shadow-sm flex flex-col p-5 my-8">
    <h2 class="font-mono text-2xl text-emerald-400 font-bold">Create a Post</h2>
    <div class='mb-2'>
        <label for="post-title" class="font-mono text-sm font-medium text-slate-400">Title:</label>
        <input type="text" name="post-title" placeholder="Enter a title..." 
        class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'>
    </div>
    <div class='mb-2'>
        <textarea name="post-body" placeholder="What's on your mind?" rows="6" col="100"
        class='placeholder:italic placeholder:text-slate-300 block w-full border border-slate-400 rounded-md py-2 px-3 focus:outline-none focus:ring-emerald-300 focus:ring-2 focus:border-none'></textarea>
    </div>
    <button id='create-btn' type='submit' class="font-mono font-normal text-slate-600 bg-emerald-300 rounded py-2 pl-4 hover:bg-emerald-400 w-1/6">Create Post</button>
</form>
</div>

<div class="flex flex-col mx-10">
    <ul>
        {{#each posts as |post|}}
        <li class="rounded border bg-slate-50 shadow-sm flex flex-col p-5 mb-8">
            <div class="flex flex-row justify-end">
                <a href="/profile/edit/{{post.id}}" class="font-mono text-emerald-600 text-base underline">Edit post</a>
            </div>
            {{> post_info post}}
        </li>
        {{/each}}
    </ul>
</div>

<script src="/javascript/create-post.js"></script>